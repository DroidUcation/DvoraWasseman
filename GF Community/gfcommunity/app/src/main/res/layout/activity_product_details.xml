<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/product_name_txt"
            android:layout_height="wrap_content"
            tools:text="@string/product_name"
            android:layout_width="fill_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold">
        </TextView>

        <!--TODO: Add image here-->
        <TextView
            android:id="@+id/store_details_title"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_details"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large">
        </TextView>
        <TextView
            android:id="@+id/store_txt"
            android:layout_height="wrap_content"
            tools:text="@string/store_name"
            android:layout_width="fill_parent">
        </TextView>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_txt"
            android:hint="@string/store_address" />
        <TextView
            android:id="@+id/store_url_txt"
            android:layout_height="wrap_content"
            android:hint="@string/store_url"
            android:layout_width="fill_parent">
        </TextView>
        <TextView
            android:id="@+id/store_phone_txt"
            android:layout_height="wrap_content"
            android:hint="@string/store_phone"
            android:layout_width="fill_parent">
        </TextView>
        <TextView
            android:id="@+id/product_comment"
            android:layout_height="wrap_content"
            tools:text="@string/comment"
            android:layout_width="fill_parent">
        </TextView>
        <TextView
            android:id="@+id/product_user_upploaded_txt"
            android:layout_height="wrap_content"
            tools:text="@string/comment"
            android:layout_width="fill_parent">
        </TextView>
    </LinearLayout>
</ScrollView>